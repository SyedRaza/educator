<div id="compact-request-side-bar">
  <div class="heading-green-small-white-small heading-inner white">Requests</div>
  <div class="container-inner-white-small left-border border-color space-bottom-inner-25 overflow-hidden">
    <div class="inner-container">
      <div class="links green-background space-top-5 space-left-inner-5">
        <img src="/images/incomming.jpg" />
        <span><%= link_to 'Incoming Requests', { :action=>'index', :controller=>:requests, :type=>:Request }, :remote=>true  %></span>
        <span class="count">(<%= count_requests %>)</span>
      </div>

      <div class="links green-background space-top-5 space-left-inner-5">
        <img src="/images/outgoing.jpg" />
        <span><%= link_to 'Outgoing Requests', 
            { :action=>'index', :controller=>:requests, :type=>:Outgoing },
            :remote=>true  %></span>
        <span class="count">(<%= count_outgoing_requests %>)</span>
      </div>
    </div>
  </div>
  <div class="border-bottom-gradient"></div>
</div>
