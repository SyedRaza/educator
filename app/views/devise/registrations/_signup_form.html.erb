<%
    @label_css= 'display-block left text-align-right space-right-inner-10'
    @rb_label_css= 'display-block text-align-right left space-right-inner-10 text-align-left'
    @rb_input_css= 'left space-right-5 border-none'
    @rb_wrapper_css= 'fields-box left'
    @input_css= 'label border-none'
    @wrapper_css= 'fields-box'
%>
<div id="sign-up-form" class="form">

<%= simple_form_for(resource, :as=>resource_name,
  :url => registration_path(resource_name)) do |r|   %>
  <%= devise_error_messages! %>
  
  <%= r.input :first_name, :label_html=>{ :class=>@label_css },
    :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css } %>
  <%= r.input :last_name , :label_html=>{ :class=>@label_css },
    :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css }%>
  <%= r.input :gender, :as => :radio, :required=>:true,
    :label => "Gender", :label_html=>{ :class=>@rb_label_css, },
    :input_html=>{ :class=>@rb_input_css }, :wrapper_html=>{ :class=>@rb_wrapper_css },
    :collection => [["Male", true], ["Female", false]] %>
  <%= r.input :email, :as=>:string, :label_html=>{ :class=>@label_css },
    :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css } %>
  <%= r.input :password , :label_html=>{ :class=>@label_css },
    :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css }%>
  <%= r.input :password_confirmation , :label_html=>{ :class=>@label_css },
    :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css }%>
  <%= r.submit 'Sign Up' ,:input_html=>{ :class=>@input_css } %>

<% end %>
</div>
