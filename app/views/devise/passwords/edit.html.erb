<%
@label_css= 'display-block left text-align-right space-right-inner-10'
@input_css= 'label border-none'
@wrapper_css= 'fields-box'
%>
<%= content_tag :div, :class=>'form', :id=>'reset-pass' do%>
  <%= simple_form_for(resource,
    :as => resource_name, :url => password_path(resource_name),
    :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
      <%= content_tag :div, :class=>'fields-box' do %>
        <%= f.input :reset_password_token, :as=>:hidden, :label_html=>{ :class=>@label_css },
          :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css } %>
        <%= f.input :password, :as=>:password, :label_html=>{ :class=>@label_css },
          :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css } %>
        <%= f.input :password_confirmation, :as=>:password, :label_html=>{ :class=>@label_css },
          :input_html=>{ :class=>@input_css }, :wrapper_html=>{ :class=>@wrapper_css } %>
        <%= f.submit "Change" %>
      <% end %>
    <% end %>
  <% end %>
  <%= render :partial => "devise/shared/links" %>