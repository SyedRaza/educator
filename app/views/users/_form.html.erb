<%  @carmen= Carmen.countries %>
<%= simple_form_for(@user, :html => {:multipart => true},:remote=>true ) do |f| %>
  <div class="profile-details-form">
    <%= f.input :first_name, :required => true  %>
    <%= f.input :last_name , :required => true%>

    <%= f.input :nick_name , :input_html=>{ :maxlength=>15 }  %>
    <%= f.input :display_picture, :as=>:file %>
    <%= f.input :gender, :as => :radio, :label => "Gender", :collection => [["Male", true], ["Female", false]], :wrapper_html=>{:css=>'width-40-percent'} %>
    <%= f.input :date_of_birth, :as=>:string , :input_html=>{:class=>'date-picker'} %>
    <%= f.input :address_1, :input_html=>{ :maxlength=>50 } %>
    <%= f.input :address_2, :input_html=>{ :maxlength=>50 } %>
    <%= f.input :zip_code %>
    <%= f.input :city, :input_html=>{ :maxlength=>20 } %>
    <%= f.input :state %>
    <%= f.input :country, :as=>:select, :collection => @carmen %>
    <%= f.input :contact_no,:label=>"Contact Number" %>
    <%= f.input :facebook_name,:label=>"Facebook Profile", :hint=>"Please paste your facebook profile URL here." %>
    <%= f.input :skype_name %>
    <%= f.input :linkedin_name, :label=>"LinkedIn Profile", :hint=>"Please paste your LinkedIn profile URL here."%>
    <%= f.input :website %>
    <%= f.input :about_me, :input_html=>{:rows =>4, :cols=>30}, :hint=>"Describe yourself in few lines. <a class='pop-up' href='/users/examples' >See Examples</a>".html_safe %>
    <%= f.submit 'Save' %>
    <input type="button" value="Cancel" class="action cancel"/>
  </div>
<% end %>