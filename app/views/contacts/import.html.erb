<%= content_for :css do %>
  <%= stylesheet_link_tag 'contacts/import' %>
  <%= stylesheet_link_tag 'contacts/index' %>
<% end %>

<%= content_for :right_side_bar do %>
  <%= render :partial => 'contacts/right_side_bar' %>
  <%= render :partial => 'contacts/group_sidebar', :locals=>{:groups=>user_groups }%>
<%end%>

<%= content_for :page_heading do %>
  <div class="heading-blue-medium-white-exlarge heading-inner white"><span class="font-18">Import</span>
    - Contacts
  </div>

<% end %>

<div class="container-inner-white-exlarge left-border border-color overflow-hidden">
  <div class="accordion space-top-5">
    <div class="tabs green-background top-space space-left-10 space-right-10 space-left-inner-5">
      <%= image_tag "icon-csv.jpg", :alt=>'logo',:class=>"tab-pic left space-right-10"  %><a href="<%= contacts_import_path(:type => 'csv') %>" class="active">CSV Import</a>
    </div>
    <div id="csv-info-container-<%=  current_user.id%>" class="form-container display-inline-block overflow-hidden space-top-10 ">
      <%= render :partial=>'import_csv_form' %>
    </div>
  </div>
  <div class="accordion space-top-5">
    <div class="tabs green-background top-space space-left-10 space-right-10 space-left-inner-5">
      <%= image_tag "icon-msn.jpg", :alt=>'logo',:class=>"tab-pic left space-right-10"  %><a href="<%= contacts_import_path(:type => 'hotmail') %>" >Hotmail</a>
    </div>
    <div id="hotmail-info-container-<%=  current_user.id%>" class="form-container display-inline-block overflow-hidden space-top-10 space-left-10 space-right-10 hide">
      <%= render :partial=>'import_form', :locals =>{:type_of_import=>'hotmail'} %>
    </div>
  </div>
  <div class="accordion space-top-5">

    <div class="tabs green-background top-space space-left-10 space-right-10 space-left-inner-5">
      <%= image_tag "icon-gmail.jpg", :alt=>'logo',:class=>"tab-pic left space-right-10"  %><a href="<%= contacts_import_path(:type => 'gmail') %>" >Gmail</a>
    </div>
    <div id="gmail-info-container-<%=  current_user.id%>" class="form-container display-inline-block overflow-hidden space-top-10 space-left-10 space-right-10 hide">
      <%= render :partial=>'import_form', :locals =>{:type_of_import=>'gmail'} %>
    </div>
  </div>
  <div class="accordion space-top-5">
    <div class="tabs green-background top-space space-left-10 space-right-10 space-left-inner-5">
      <%= image_tag "icon-yahoo.jpg", :alt=>'logo',:class=>"tab-pic left space-right-10"  %><a href="<%= contacts_import_path(:type => 'yahoo') %>" >Yahoo</a>
    </div>
    <div id="yahoo-info-container-<%=  current_user.id%>" class="form-container display-inline-block overflow-hidden space-top-10 space-left-10 space-right-10 hide">
      <%= render :partial=>'import_form', :locals =>{:type_of_import=>'yahoo'} %>
    </div>
  </div>

</div>
<div class="border-bottom-gradient"></div>

<%= content_for :js do %>
  <%= javascript_include_tag 'contacts/import.js' %>
<% end %>
