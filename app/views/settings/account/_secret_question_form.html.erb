<%= simple_form_for :secret,
  :url=>account_setting_user_settings_path( current_user ),
  :remote=>true do |f| %>
  <%= f.input :secret_question, :as=>:select, :collection=>SecretQuestion.all,
    :wrapper_html=>{ :class=>'field-box space-bottom-10' },
    :label_html=>{ :class=>'left display-block space-right-15 text-align-right' },
    :input_html=>{ :class=>'setting-input-field' } %>
  <%= f.input :secret_answer,
    :wrapper_html=>{ :class=>'field-box space-bottom-10' },
    :label_html=>{ :class=>'left display-block space-right-15 text-align-right' },
    :input_html=>{ :class=>'setting-input-field' } %>
  <%= content_tag :div, :class=>"setting-left-side-content margin-rest" do %>
    <%= f.button 'submit', :value=>'Change Secret Question' %>
    <%= submit_tag 'Cancel',:type=>'button', :class=>"btn-cancel space-left-5" %>
  <% end %>
<% end %>